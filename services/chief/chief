(get "/chief/droplet/dropletid:"
     (authenticate)
     (if screen_name
         (then (set ocean (DigitalOcean new))
               (ocean setClientID:ClientID)
               (ocean setApiKey:APIKey)
               (set response (run (ocean getDropletWithID:dropletid)))
