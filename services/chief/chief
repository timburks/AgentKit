                               (&div class:"small-12 columns"
                                     (&h1 "Droplet details")
                                     (if (set droplet (response droplet:))
                                         
                                         (&div class:"panel"
                                               (&h3 (droplet name:))
                                               
                                               ))
                                     
                                     (&hr)
                                     (divs-for-dictionary response)
                                     (&hr)))))
         (else (redirect "/signin"))))

(AgentHTTPServer run)
